{
    "env": {
        "browser": true,
        "node": true
    },
    "plugins": [
        "import",
        "html"
    ],    
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "off"
    },
    "globals": {
        "firebase": true
    },
    "extends": "eslint:recommended",    
    "plugin": [ "html" ]        
}